<h1 class=" text-2xl font-bold mb-6"><%= @board.title %></h1>
<div class="flex gap-4">
  <% @board.lists.each do |list| %>
    <div class="bg-neutral-900 p-3 rounded flex flex-col gap-2 shadow-md min-w-[350px]">
      <h2 class="font-bold"><%= list.title %></h2>
      <!-- Karty przypisane do tej listy -->
      <% list.cards.each do |card| %>
        <%= link_to edit_card_path(card) do %>
          <div class="bg-neutral-700 p-2 rounded shadow flex flex-col">
            <p class="font-semibold text-neutral-200"><%= card.title %></p>
            <% if card.description && card.description.length > 0 %>
              <p class="line-clamp-2 text-neutral-200 mt-3"><%= card.description %></p>
            <% end %>
          </div>
        <% end %>
      <% end %>
      <!-- Formularz do dodania karty do listy -->
      <%= form_with model: [@board, list, Card.new] do |form| %>
        <div class="flex">
          <%= form.text_field :title, placeholder: "Nowa karta...", class: "placeholder:text-neutral-400 border p-2 rounded mb-2 bg-neutral-600 text-neutral-200 w-full" %>
          <%= form.submit "+", class: "btn btn-primary -ml-11" %>
        </div>
      <% end %>
      <%= button_to "Delete", board_list_path(@board, list), method: :delete, class: "btn btn-error" %>
    </div>
  <% end %>
  <%= form_with model: [@board, List.new] do |form| %>
    <div class="flex  mr-4">
      <%= form.text_field :title, placeholder: "Nowa lista", class: "text-neutral-700 border p-[7px] pr-[5rem] rounded min-w-[300px]" %>
      <%= form.submit "Dodaj", class: "btn btn-primary -ml-18" %>
    </div>
  <% end %>
</div>