<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tablice</h1>
  </div>
  <% if @boards.any? %>
    <div id="boards" class="min-w-full grid grid-cols-3 gap-6 mt-6">
      <% @boards.each do |board| %>
        <%= render "boards/board_card", board: board %>
      <% end %>
      <%= render "boards/create_board_card" %>
    </div>
  <% else %>
    <div class="mt-6">
      <%= render "boards/empty_state" %>
    </div>
  <% end %>
</div>