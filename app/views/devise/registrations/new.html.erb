<div class="w-full min-h-[100vh] pt-24">
  <div class="max-w-xl w-full mx-auto shadow-lg bg-neutral-300 rounded-lg py-8 text-neutral-800">
    <h2 class="text-xl mb-4 text-center">Zarejestruj się</h2>
    <div class="w-3/4 mx-auto"> <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field mb-4"> <%= f.label :email, class: "mb-2 text-lg" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg bg-gray-50" %> </div>
        <div class="field mb-4"> <%= f.label :password, "Hasło", class: "mb-2 text-lg" %> <% if @minimum_password_length %> <em>(<%= @minimum_password_length %> znaków minimum)</em> <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded-lg bg-gray-50" %> </div>
        <div class="field mb-4"> <%= f.label :password_confirmation, "Potwierdzenie hasła", class: "mb-2 text-lg" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded-lg bg-gray-50" %> </div>
        <div class="actions"> <%= f.submit "Zarejestruj się", class: "btn btn-primary w-full" %> </div>
      <% end %>
      <div class="flex flex-col items-center mt-4 gap-4"> <%= render "devise/shared/links" %> </div>
    </div>
  </div>
</div>
