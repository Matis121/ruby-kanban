<div class="w-full min-h-[100vh] pt-24">
  <div class="max-w-xl w-full mx-auto shadow-lg bg-neutral-300 rounded-lg py-8 text-neutral-800">
    <h2 class="text-xl mb-4 text-center">Zapomniałeś hasła?</h2>
    <div class="w-3/4 mx-auto">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field mb-4">
          <%= f.label :email, class: "mb-2 text-lg" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded-lg bg-gray-50" %>
        </div>
        <div class="actions w-full">
          <%= f.submit "Wyślij mi instrukcje resetowania hasła", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
      <div class="flex flex-col items-center mt-4 gap-4">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>